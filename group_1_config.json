{
  "mqtt": {
    "broker": "broker.hivemq.com",
    "port": 1883,
    "keepalive": 15,
    "qos": 1,
    "topics": { "data": "group_1/temp", "status": "group_1/status" }
  },
  "publish": {
    "interval": 2,
    "miss_rate": 0.01,
    "blackout": { "chance": 0.01, "min": 5, "max": 8 }
  },
  "devices": {
    "dev001": "Library",
    "dev002": "Engineering Lab",
    "dev003": "Student Cafeteria"
  },
  "alerts": {
    "service": "smtp",
      "smtp": {
        "server": "smtp.sendgrid.net",           
        "port": 587,
        "username": "apikey",  
        "password": "${SENDGRID_API_KEY}",
        "sender": "grouproject216@gmail.com",
        "receivers": ["grouproject216@gmail.com"]
      }
  }
}